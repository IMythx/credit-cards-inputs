{
  "name": "credit-cards-inputs",
  "version": "1.0.0",
  "type": "module",
  "description": "a vanilla JavaScript lightweight utility designed to handle the validation, formatting, and user-friendly input of credit card information. While primarily built with vanilla JavaScript, this library leverages two other specialized libraries to enhance functionality. It's ideal for enhancing payment forms with automatic card type detection, input masking, real-time validation, and card number formatting",
  "main": "dist/credit-cards-inputs.umd.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/IMythx/credit-cards-inputs",
  "repository": {
    "url": "https://github.com/IMythx/credit-cards-inputs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "credit-card-input"
  ],
  "author": "IMythx",
  "license": "MIT",
  "dependencies": {
    "credit-card-type": "^10.0.1",
    "inputmask": "^5.0.9"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@rollup/plugin-url": "^8.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/inputmask": "^5.0.7",
    "rollup": "^4.24.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-esbuild-minify": "^1.1.2",
    "semantic-release": "^24.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
